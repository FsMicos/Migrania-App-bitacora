[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    .venv,
    venv,
    env,
    .env
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
per-file-ignores =
    */settings.py:E501,F401
    */tests.py:F401
    */test_*.py:F401
max-complexity = 10
